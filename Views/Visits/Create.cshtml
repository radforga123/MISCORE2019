@model MISCORE2019.Models.Visit

@{ ViewData["Title"] = "Create"; }

<head>
    <link rel="stylesheet" type="text/css" href="~/css/VisitsCreate.css" />
</head>

<div class="basic-div">
    <div class="create-div">
        <form asp-action="Create">
            <div>
                <label asp-for="time" class="control-label"></label>
                <input type="datetime-local" asp-for="time"/>
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <div>
                <label>Doctors</label>
                <select asp-for="doctors" class="form-control" asp-items="ViewBag.Doctors" multiple="multiple"></select>
            </div>
            <div >
                <label asp-for="PatientID" class="control-label"></label>
                <input asp-for="PatientID" class="form-control" />
                <span asp-validation-for="PatientID" class="text-danger"></span>
            </div>
            <div class="div-buttons">
                <button asp-action="Create">
                    <a>Сохранить</a>
                </button>
                <button asp-action="Index">
                    <a>Вернуться</a>
                </button>
            </div>
        </form>
    </div>
</div>