@model MISCORE2019.Models.Visit

@{ ViewData["Title"] = "Edit"; }

<head>
    <link rel="stylesheet" type="text/css" href="~/css/VisitsEdit.css" />
</head>

<div class="basic-div">
    <div class="edit-div">
        <form asp-action="Edit">
            <div>
                <label asp-for="time" class="control-label">Дата и время</label>
                <input type="datetime-local" asp-for="time" />
                <span asp-validation-for="time" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="doctors" class="spec-label">Доктор</label>
                <select asp-for="doctors" asp-items="ViewBag.Doctors" multiple="multiple"></select>
            </div>
            <div>
                <label asp-for="PatientID" class="control-label"></label>
                <input asp-for="PatientID" class="form-control" />
                <span asp-validation-for="PatientID" class="text-danger"></span>
            </div>
            <div class="div-buttons">
                <button asp-action="Edit">
                    <a>Сохранить</a>
                </button>
                <button asp-action="Index">
                    <a>Вернуться</a>
                </button>
            </div>
        </form>
    </div>
</div>