@model MISCORE2019.Models.Patient

@{ ViewData["Title"] = "Delete"; }

<head>
    <link type="text/css" href="~/css/PatientsDelete.css" rel="stylesheet" />
</head>

<h4>Patient</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FIO)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FIO)
        </dd>
        <dt class="col-sm-2">
            Visits
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.visits?.Select(v => v.time.ToString("g")) ?? Enumerable.Empty<string>())
        </dd>
        <dt class="col-sm-2">
            Analyzes
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.analyzes?.Select(a => $"Blood Group: {a.weight}, Epileptic Activity: {a.diagnos}") ?? Enumerable.Empty<string>())
        </dd>
    </dl>

            <div class="div-buttons">
                <button asp-action="Delete">
                    <a>Удалить</a>
                </button>
                <button asp-action="Index">
                    <a>Вернуться</a>
                </button>
            </div>
        </form>
    </div>
</div>