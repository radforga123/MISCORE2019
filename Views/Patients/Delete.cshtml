@model MISCORE2019.Models.Patient

@{ ViewData["Title"] = "Delete"; }

<h1>Delete</h1>

<h4>Patient</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FIO)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FIO)
        </dd>
        <dt class="col-sm-2">
            Visits
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.visits?.Select(v => v.time.ToString("g")) ?? Enumerable.Empty<string>())
        </dd>
        <dt class="col-sm-2">
            Analyzes
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.analyzes?.Select(a => $"Blood Group: {a.bloodGroup}, Epileptic Activity: {a.epileptiphoricActivity}") ?? Enumerable.Empty<string>())
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>