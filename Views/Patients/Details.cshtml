@model MISCORE2019.Models.Patient

@{ ViewData["Title"] = "Details"; }

<h1>Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FIO)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FIO)
        </dd>
        <dt class="col-sm-2">
            Visits
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.visits?.Select(v => v.time.ToString("g")) ?? Enumerable.Empty<string>())
        </dd>
        <dt class="col-sm-2">
            Analyzes
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.analyzes?.Select(a => $"Blood Group: {a.weight}, Epileptic Activity: {a.diagnos}") ?? Enumerable.Empty<string>())
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>