@model MISCORE2019.Models.Analyze

@{ ViewData["Title"] = "Edit"; }

<head>
    <link rel="stylesheet" type="text/css" href="~/css/AnalyzecEdit.css" />
</head>

<div class="basic-div">
    <div class="edit-div">
        <form asp-action="Edit">
            <div>
                <label asp-for="weight" class="weight-label"></label>
                <input asp-for="weight" class="weight-control" />
                <span asp-validation-for="weight" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="diagnos" class="epActivity-label"></label>
                <input asp-for="diagnos" class="epActivity-control" />
                <span asp-validation-for="diagnos" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="PatientID" class="epActivity-label"></label>
                <input asp-for="PatientID" class="epActivity-control" />
                <span asp-validation-for="PatientID" class="text-danger"></span>
            </div>
            <div class="div-buttons">
                <button asp-action="Edit" class="save-button">
                    <a>Сохранить</a>
                </button>
                <button asp-action="Index" class="back-button">
                    <a>Вернуться</a>
                </button>
            </div>
        </form>
    </div>
</div>