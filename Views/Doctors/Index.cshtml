@model IEnumerable<MISCORE2019.Models.Doctor>

@{
    ViewData["Title"] = "Index";
    ViewBag.Title = "Doctors";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link type="text/css" href="~/css/DoctorsIndex.css" rel="stylesheet" />
</head>
<div class="div-create">
    <button class="create">
        <a asp-action="Create" class="a-create">Добавить врача</a>
    </button>
</div>


<div class="div-table">
    <table>
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Специализация</th>
                <th>Удаление</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.FIO)</a>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.specialization)</td>

                    <td align="center">
                        <a asp-action="Delete" asp-route-id="@item.ID"><img src="~/delete.svg" alt="delete"/></a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
